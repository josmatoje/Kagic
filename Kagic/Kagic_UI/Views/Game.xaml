<Page
    x:Class="Kagic_UI.Views.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kagic_UI.Views"
    xmlns:vm="using:Kagic_UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:VMPruebas/>
    </Page.DataContext>
    
    <RelativePanel>
        <GridView x:Name="gdOpponentCards" MinHeight="200" MinWidth="400" Background="DarkRed"
            RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">
            
        </GridView>

        
        <RelativePanel x:Name="stpBattlefield" Margin="5"
                       RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">
            <GridView x:Name="gdOpponentCreatures" MinHeight="250" MinWidth="400" Margin="0,0,0,20" Background="DarkViolet"
                      RelativePanel.AlignHorizontalCenterWithPanel="True">

            </GridView>
            <GridView x:Name="gdPlayerCreatures" MinHeight="250" MinWidth="400" Background="BlueViolet"
                      RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="gdOpponentCreatures">

            </GridView>
        </RelativePanel>
        

        <RelativePanel x:Name="stpScoreboard" MinHeight="300" MinWidth="150" Background="Crimson"
                    RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
            
        </RelativePanel>

        <RelativePanel Width="250" Height="400"  Background="Gold"
            RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
            <Canvas RelativePanel.AlignLeftWithPanel="True">
                <Image Source="{Binding Card.Image}" MaxWidth="300" MaxHeight="400" Margin="0, 0, 10, 0"/>
            </Canvas>
        </RelativePanel>

        <GridView x:Name="gdPlayerCards" MinHeight="200" MinWidth="800" ItemsSource="{Binding PlayerCards}" Background="CornflowerBlue"
            RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">
            
            <GridView.ItemTemplate>
                <DataTemplate>
                    <RelativePanel Height="200" Width="150">
                        <Canvas Canvas.ZIndex="1"
                            RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                            <Image Source="{Binding Image}" MaxHeight="200"/>
                        </Canvas>
                        <Canvas Background="Red" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Canvas.ZIndex="2"/>
                        <Canvas Background="Green" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Canvas.ZIndex="2"/>
                        <Canvas Background="LightSteelBlue" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Canvas.ZIndex="2"/>
                    </RelativePanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </RelativePanel>
</Page>
