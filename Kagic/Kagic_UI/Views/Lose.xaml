<Page
    x:Class="Kagic_UI.Views.Lose"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kagic_UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Background>
        <ImageBrush ImageSource="/Assets/Images/Background.png"/>
    </Page.Background>

    <RelativePanel>
        <TextBlock x:Name="txbwin" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True">Tendrás que seguir entrenando</TextBlock>
        <Button RelativePanel.Below="txbwin"  RelativePanel.AlignHorizontalCenterWithPanel="True" Click="Button_Click">Volver a pantalla principal</Button>
    </RelativePanel>
</Page>
